@model TmkMuhendislik.Models.AdminInfo
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Register</title>
    <link href="~/content/materialize/css/Admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Kaydol</h3></div>
                                <div class="card-body">
                                    @using (Html.BeginForm())
                                    {
                                        <form>
                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <input class="form-control" id="A_Name" type="text" placeholder="Adınızı giriniz" name="A_Name" />
                                                        <label for="A_Name">Adı</label>
                                                        @Html.ValidationMessageFor(m=>m.A_Name,"",new {@class = "text-danger"})
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-floating">
                                                        <input class="form-control" id="A_Surname" type="text" placeholder="Soyadınızı giriniz" name="A_Surname" />
                                                        <label for="A_Surname">Soyadı</label>
                                                        @Html.ValidationMessageFor(m => m.A_Surname, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" id="A_Email" type="email" placeholder="name@example.com" name="A_Email" />
                                                <label for="A_Email">Email</label>
                                                @Html.ValidationMessageFor(m => m.A_Email, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" id="A_PhoneNumber" type="tel" placeholder="0385 123 4567" name="A_PhoneNumber" />
                                                <label for="A_PhoneNumber">Telefon</label>
                                                @Html.ValidationMessageFor(m => m.A_PhoneNumber, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <input class="form-control" id="A_Password" type="password" placeholder="Şifre giriniz" name="A_Password" />
                                                        <label for="A_Password">Şifre</label>
                                                        @Html.ValidationMessageFor(m => m.A_Password, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <input class="form-control" id="inputPasswordConfirm" type="password" placeholder="Şifreyi tekrar giriniz" />
                                                        <label for="inputPasswordConfirm">Şifre Tekrar</label>
                                                        
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mt-4 mb-0">
                                                <div class="d-grid">
                                                    <input type="submit" class="btn btn-primary" value="Hesap Oluştur" />
                                                </div>
                                            </div>
                                        </form>
                                    }



                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="@Url.Action("Login","Admin")">Zaten hesabınız var mı? Giriş Yap</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">&copy; Copyright 2020 TmkMühendislik - Tüm Hakları Saklıdır.</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <script src="~/scripts/MyScripts/Admin/js/scripts.js"></script>
    <script src="~/scripts/MyScripts/Admin/Register/Register.js"></script>
</body>
</html>

